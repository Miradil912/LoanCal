    <script>
        // Prevent form submission and page refresh
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                e.preventDefault();
            });
        });

        // Tab Navigation
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.calculator-section').forEach(section => section.classList.remove('active'));
                
                button.classList.add('active');
                const tabId = button.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Internal Calculator Links
        document.querySelectorAll('.calculator-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const tabId = link.getAttribute('data-tab');
                
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.calculator-section').forEach(section => section.classList.remove('active'));
                
                document.querySelector(`.tab-button[data-tab="${tabId}"]`).classList.add('active');
                document.getElementById(tabId).classList.add('active');
            });
        });

        // Loan Calculator Functionality
        document.getElementById('loan-form').addEventListener('submit', function() {
            const amount = parseFloat(document.getElementById('loan-amount').value);
            const termYears = parseFloat(document.getElementById('loan-term').value);
            const annualRate = parseFloat(document.getElementById('interest-rate').value);
            
            const termMonths = termYears * 12;
            const monthlyRate = annualRate / 100 / 12;
            
            // Calculate monthly payment using amortization formula
            const monthlyPayment = monthlyRate > 0 
                ? (amount * monthlyRate * Math.pow(1 + monthlyRate, termMonths)) / 
                  (Math.pow(1 + monthlyRate, termMonths) - 1)
                : amount / termMonths;
                
            const totalPayment = monthlyPayment * termMonths;
            const totalInterest = totalPayment - amount;
            
            // Display results
            document.getElementById('monthly-payment').textContent = `$${monthlyPayment.toFixed(2)}`;
            document.getElementById('total-interest').textContent = `$${totalInterest.toFixed(2)}`;
            document.getElementById('total-payment').textContent = `$${totalPayment.toFixed(2)}`;
            document.getElementById('loan-results').classList.add('active');
        });

        // Debt Calculator - Add/Remove Debts
        let debtCount = 1;
        
        document.getElementById('add-debt').addEventListener('click', function() {
            debtCount++;
            const debtList = document.getElementById('debt-list');
            const newDebt = document.createElement('div');
            newDebt.className = 'debt-item';
            newDebt.innerHTML = `
                <div class="debt-item-header">
                    <h3>Debt #${debtCount}</h3>
                    <button type="button" class="remove-debt">×</button>
                </div>
                <div class="calculator-grid">
                    <div class="form-group">
                        <label>Debt Name</label>
                        <input type="text" class="debt-name" value="Debt ${debtCount}">
                    </div>
                    <div class="form-group">
                        <label>Balance ($)</label>
                        <input type="number" class="debt-balance" min="0" step="100" value="3000">
                    </div>
                    <div class="form-group">
                        <label>Interest Rate (%)</label>
                        <input type="number" class="debt-rate" min="0" max="50" step="0.01" value="7.5">
                    </div>
                    <div class="form-group">
                        <label>Minimum Payment ($)</label>
                        <input type="number" class="debt-min-payment" min="0" step="10" value="150">
                    </div>
                </div>
            `;
            debtList.appendChild(newDebt);
            
            // Add event listener to the new remove button
            newDebt.querySelector('.remove-debt').addEventListener('click', function() {
                if (document.querySelectorAll('.debt-item').length > 1) {
                    debtList.removeChild(newDebt);
                } else {
                    alert('You need at least one debt for the calculator.');
                }
            });
        });
        
        // Add event listeners to initial remove buttons
        document.querySelectorAll('.remove-debt').forEach(button => {
            button.addEventListener('click', function() {
                if (document.querySelectorAll('.debt-item').length > 1) {
                    this.closest('.debt-item').remove();
                } else {
                    alert('You need at least one debt for the calculator.');
                }
            });
        });

        // Debt Payoff Calculation
        document.getElementById('debt-form').addEventListener('submit', function() {
            const monthlyBudget = parseFloat(document.getElementById('monthly-payment-budget').value);
            const debtItems = document.querySelectorAll('.debt-item');
            const debts = [];
            
            // Collect debt data
            debtItems.forEach(item => {
                const debt = {
                    name: item.querySelector('.debt-name').value,
                    balance: parseFloat(item.querySelector('.debt-balance').value),
                    rate: parseFloat(item.querySelector('.debt-rate').value),
                    minPayment: parseFloat(item.querySelector('.debt-min-payment').value)
                };
                debts.push(debt);
            });
            
            // Sort debts by balance (snowball method)
            debts.sort((a, b) => a.balance - b.balance);
            
            // Simplified payoff calculation
            const totalMinPayments = debts.reduce((sum, debt) => sum + debt.minPayment, 0);
            
            if (monthlyBudget < totalMinPayments) {
                alert(`Your monthly budget ($${monthlyBudget}) is less than the total minimum payments ($${totalMinPayments.toFixed(2)}). Please increase your budget.`);
                return;
            }
            
            // Calculate debt-free date (simplified)
            const today = new Date();
            const debtFreeDate = new Date(today);
            debtFreeDate.setMonth(debtFreeDate.getMonth() + 24); // Simplified 2-year estimate
            
            // Display results
            document.getElementById('debt-free-date').textContent = debtFreeDate.toLocaleDateString();
            document.getElementById('total-debt-interest').textContent = `$${(monthlyBudget * 24 * 0.3).toFixed(2)}`; // Simplified
            
            // Generate payoff timeline
            const timeline = document.getElementById('payoff-timeline');
            timeline.innerHTML = '<h4>Payoff Order (Snowball Method)</h4>';
            
            debts.forEach((debt, index) => {
                const debtElement = document.createElement('div');
                debtElement.className = 'result-item';
                debtElement.innerHTML = `
                    <span>${index + 1}. ${debt.name}</span>
                    <span>$${debt.balance.toFixed(2)}</span>
                `;
                timeline.appendChild(debtElement);
            });
            
            document.getElementById('debt-results').classList.add('active');
        });

        // Investment Growth Calculator
        document.getElementById('investment-form').addEventListener('submit', function() {
            const initialInvestment = parseFloat(document.getElementById('initial-investment').value);
            const monthlyContribution = parseFloat(document.getElementById('monthly-contribution').value);
            const investmentTerm = parseFloat(document.getElementById('investment-term').value);
            const expectedReturn = parseFloat(document.getElementById('expected-return').value);
            
            const monthlyRate = expectedReturn / 100 / 12;
            const months = investmentTerm * 12;
            
            // Calculate future value of initial investment
            const futureValueInitial = initialInvestment * Math.pow(1 + monthlyRate, months);
            
            // Calculate future value of monthly contributions
            const futureValueContributions = monthlyContribution * 
                (Math.pow(1 + monthlyRate, months) - 1) / monthlyRate;
            
            const futureValue = futureValueInitial + futureValueContributions;
            const totalContributions = initialInvestment + (monthlyContribution * months);
            const interestEarned = futureValue - totalContributions;
            
            // Display results
            document.getElementById('future-value').textContent = `$${futureValue.toFixed(2)}`;
            document.getElementById('total-contributions').textContent = `$${totalContributions.toFixed(2)}`;
            document.getElementById('interest-earned').textContent = `$${interestEarned.toFixed(2)}`;
            document.getElementById('investment-results').classList.add('active');
        });

        // Savings Calculator
        document.getElementById('savings-form').addEventListener('submit', function() {
            const initialSavings = parseFloat(document.getElementById('initial-savings').value);
            const monthlySaving = parseFloat(document.getElementById('monthly-saving').value);
            const savingTerm = parseFloat(document.getElementById('saving-term').value);
            const savingsRate = parseFloat(document.getElementById('savings-rate').value);
            
            const monthlyRate = savingsRate / 100 / 12;
            const months = savingTerm * 12;
            
            // Calculate future value
            const futureValueInitial = initialSavings * Math.pow(1 + monthlyRate, months);
            const futureValueContributions = monthlySaving * 
                (Math.pow(1 + monthlyRate, months) - 1) / monthlyRate;
            
            const futureValue = futureValueInitial + futureValueContributions;
            const totalDeposits = initialSavings + (monthlySaving * months);
            const interestEarned = futureValue - totalDeposits;
            
            // Display results
            document.getElementById('savings-future-value').textContent = `$${futureValue.toFixed(2)}`;
            document.getElementById('total-deposits').textContent = `$${totalDeposits.toFixed(2)}`;
            document.getElementById('savings-interest').textContent = `$${interestEarned.toFixed(2)}`;
            document.getElementById('savings-results').classList.add('active');
        });

        // Mortgage Calculator
        document.getElementById('mortgage-form').addEventListener('submit', function() {
            const mortgageAmount = parseFloat(document.getElementById('mortgage-amount').value);
            const mortgageTerm = parseFloat(document.getElementById('mortgage-term').value);
            const mortgageRate = parseFloat(document.getElementById('mortgage-rate').value);
            const propertyTax = parseFloat(document.getElementById('property-tax').value);
            const homeInsurance = parseFloat(document.getElementById('home-insurance').value);
            
            const termMonths = mortgageTerm * 12;
            const monthlyRate = mortgageRate / 100 / 12;
            
            // Calculate monthly payment (P&I)
            const monthlyPayment = monthlyRate > 0 
                ? (mortgageAmount * monthlyRate * Math.pow(1 + monthlyRate, termMonths)) / 
                  (Math.pow(1 + monthlyRate, termMonths) - 1)
                : mortgageAmount / termMonths;
            
            // Calculate additional monthly costs
            const monthlyTax = propertyTax / 12;
            const monthlyInsurance = homeInsurance / 12;
            const totalMonthlyPayment = monthlyPayment + monthlyTax + monthlyInsurance;
            
            const totalPayment = monthlyPayment * termMonths;
            const totalInterest = totalPayment - mortgageAmount;
            const totalMortgageCost = totalPayment + propertyTax * mortgageTerm + homeInsurance * mortgageTerm;
            
            // Display results
            document.getElementById('mortgage-payment').textContent = `$${monthlyPayment.toFixed(2)}`;
            document.getElementById('total-monthly-payment').textContent = `$${totalMonthlyPayment.toFixed(2)}`;
            document.getElementById('total-mortgage-interest').textContent = `$${totalInterest.toFixed(2)}`;
            document.getElementById('total-mortgage-cost').textContent = `$${totalMortgageCost.toFixed(2)}`;
            document.getElementById('mortgage-results').classList.add('active');
        });

        // Initialize with first debt removal handler
        document.querySelector('.remove-debt').addEventListener('click', function() {
            if (document.querySelectorAll('.debt-item').length > 1) {
                this.closest('.debt-item').remove();
            } else {
                alert('You need at least one debt for the calculator.');
            }
        });
    </script>
</body>
</html>
